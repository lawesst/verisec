{
  "name": "@verisec/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "npm run build -w @verisec/schema",
    "dev": "tsx src/index.ts",
    "preseed": "npm run build -w @verisec/schema",
    "seed": "tsx src/seed.ts",
    "seed:all": "tsx src/seed.ts --all",
    "seed:refresh": "tsx src/seed.ts --all --refresh",
    "pretest": "npm run build -w @verisec/schema",
    "test": "tsx --test src/**/*.test.ts",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@verisec/schema": "*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "ethereum-cryptography": "^2.2.1",
    "ethers": "^6.12.1",
    "fastify": "^4.26.0",
    "mysql2": "^3.9.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "@types/node": "^20.11.30"
  }
}
